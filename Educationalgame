        let currentQuestion = 0;
        let score = 0;
        let timeLeft = 20;
        let timer;
        let selectedOption = null;
        let currentQuestions = [];
        const totalQuestions = 10;

        const questionText = document.getElementById('questionText');
        const optionsContainer = document.getElementById('optionsContainer');
        const actionButton = document.getElementById('actionButton');
        const resultScreen = document.getElementById('resultScreen');
        const scoreValue = document.getElementById('scoreValue');
        const finalScore = document.getElementById('finalScore');
        const timeCount = document.getElementById('timeCount');
        const questionNumber = document.getElementById('questionNumber');
        const progressBar = document.getElementById('progressBar');
        const starsContainer = document.getElementById('starsContainer');
        const resultMessage = document.getElementById('resultMessage');
        const restartButton = document.getElementById('restartButton');
        const prizeDescription = document.getElementById('prizeDescription');
        const feedback = document.getElementById('feedback');
        const confettiContainer = document.getElementById('confettiContainer');

        // Add both click and touchstart event listeners for iOS compatibility
        function addInteractionListener(element, callback) {
            element.addEventListener('click', callback);
            element.addEventListener('touchstart', function(e) {
                e.preventDefault();
                callback(e);
            }, { passive: false });
        }

        // Function to get random unique questions
        function getRandomQuestions(count) {
            const shuffled = [...questionBank].sort(() => 0.5 - Math.random());
            return shuffled.slice(0, count);
        }

        function startGame() {
            currentQuestion = 0;
            score = 0;
            scoreValue.textContent = score;
            resultScreen.style.display = 'none';
            actionButton.style.display = 'none';
            currentQuestions = getRandomQuestions(totalQuestions);
            loadQuestion();
        }

        function loadQuestion() {
            if (currentQuestion >= totalQuestions) {
                showResults();
                return;
            }

            const q = currentQuestions[currentQuestion];
            questionText.textContent = q.question;
            questionNumber.textContent = `Ø³ÙˆØ§Ù„ ${currentQuestion + 1} Ø§Ø² ${totalQuestions}`;
            
            // Update progress bar
            const progress = ((currentQuestion) / totalQuestions) * 100;
            progressBar.style.width = `${progress}%`;
            
            optionsContainer.innerHTML = '';
            feedback.style.display = 'none';
            
            // Shuffle options for each question
            const shuffledOptions = [...q.options].sort(() => 0.5 - Math.random());
            shuffledOptions.forEach((option, index) => {
                const optionElement = document.createElement('div');
                optionElement.className = 'option';
                optionElement.textContent = option;
                // Find the correct index in shuffled array
                const shuffledCorrectIndex = shuffledOptions.indexOf(q.options[q.correct]);
                optionElement.dataset.index = index;
                optionElement.dataset.iscorrect = (index === shuffledCorrectIndex).toString();
                addInteractionListener(optionElement, selectOption);
                optionsContainer.appendChild(optionElement);
            });

            timeLeft = 20;
            timeCount.textContent = timeLeft;
            startTimer();
        }

        function selectOption(e) {
            // Prevent multiple selections
            if (selectedOption) return;
            
            // Remove previous selection
            document.querySelectorAll('.option').forEach(opt => {
                opt.classList.remove('selected');
            });
            
            // Add selection to clicked option
            e.target.classList.add('selected');
            selectedOption = e.target;
            
            // Auto check answer immediately
            setTimeout(() => {
                checkAnswer();
            }, 300);
        }

        function startTimer() {
            clearInterval(timer);
            timer = setInterval(() => {
                timeLeft--;
                timeCount.textContent = timeLeft;
                
                if (timeLeft <= 0) {
                    clearInterval(timer);
                    // Auto-select first option if time runs out
                    const firstOption = document.querySelector('.option');
                    if (firstOption && !selectedOption) {
                        firstOption.classList.add('selected');
                        selectedOption = firstOption;
                        checkAnswer();
                    } else if (!selectedOption) {
                        // If no option selected at all, move to next question
                        currentQuestion++;
                        loadQuestion();
                    }
                }
            }, 1000);
        }

        function checkAnswer() {
            clearInterval(timer);
            
            const options = document.querySelectorAll('.option');
            const isCorrect = selectedOption && selectedOption.dataset.iscorrect === 'true';
            
            if (isCorrect) {
                score += 10;
                scoreValue.textContent = score;
                selectedOption.style.background = 'linear-gradient(135deg, #66bb6a, #81c784)';
                selectedOption.style.color = 'white';
                createConfetti(50);
                
                feedback.textContent = "Ø¢ÙØ±ÛŒÙ†! Ù¾Ø§Ø³Ø® Ø´Ù…Ø§ Ú©Ø§Ù…Ù„Ø§Ù‹ Ø¯Ø±Ø³Øª Ø§Ø³Øª! ğŸ‘";
                feedback.style.background = 'linear-gradient(135deg, #e8f5e9, #c8e6c9)';
                feedback.style.color = '#2e7d32';
            } else {
                if (selectedOption) {
                    selectedOption.style.background = 'linear-gradient(135deg, #ef5350, #e57373)';
                    selectedOption.style.color = 'white';
                }
                // Highlight correct answer
                options.forEach(opt => {
                    if (opt.dataset.iscorrect === 'true') {
                        opt.style.background = 'linear-gradient(135deg, #66bb6a, #81c784)';
                        opt.style.color = 'white';
                    }
                });
                
                feedback.textContent = "Ù†Ø§Ø±Ø§Ø­Øª Ù†Ø¨Ø§Ø´! Ù¾Ø§Ø³Ø® ØµØ­ÛŒØ­ Ø±Ø§ Ø¨Ø¨ÛŒÙ† Ùˆ ÛŒØ§Ø¯ Ø¨Ú¯ÛŒØ±! ğŸ“š";
                feedback.style.background = 'linear-gradient(135deg, #ffebee, #ffcdd2)';
                feedback.style.color = '#c62828';
            }
            
            feedback.style.display = 'block';
            
            // Disable all options
            options.forEach(opt => {
                opt.style.pointerEvents = 'none';
            });
            
            // Auto-proceed to next question after 2 seconds
            setTimeout(() => {
                currentQuestion++;
                selectedOption = null;
                loadQuestion();
            }, 2000);
        }

        function showResults() {
            actionButton.style.display = 'none';
            questionText.textContent = '';
            optionsContainer.innerHTML = '';
            questionNumber.style.display = 'none';
            document.querySelector('.timer').style.display = 'none';
            feedback.style.display = 'none';
            
            finalScore.textContent = score;
            resultScreen.style.display = 'block';
            
            // Show stars based on score
            starsContainer.innerHTML = '';
            const starCount = Math.floor(score / 10);
