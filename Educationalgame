        function createConfetti(count) {
            confettiContainer.innerHTML = '';
            confettiContainer.style.display = 'block';
            
            const colors = ['#ff6b9d', '#ff7e5f', '#ffe066', '#a8e6cf', '#ffd166', '#6eceda', '#ff9e6d'];
            
            for (let i = 0; i < count; i++) {
                const piece = document.createElement('div');
                piece.className = 'confetti-piece';
                piece.style.left = Math.random() * 100 + 'vw';
                piece.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                piece.style.width = (Math.random() * 2.4 + 1.2) + 'vw';
                piece.style.height = piece.style.width;
                piece.style.animationDuration = (Math.random() * 3 + 2) + 's';
                piece.style.animationDelay = Math.random() * 2 + 's';
                confettiContainer.appendChild(piece);
            }
            
            // Remove confetti after animation
            setTimeout(() => {
                confettiContainer.style.display = 'none';
                confettiContainer.innerHTML = '';
            }, 5000);
        }

        // Event listeners with both click and touchstart
        addInteractionListener(actionButton, () => {
            if (actionButton.textContent === 'Ø´Ø±ÙˆØ¹ Ø¨Ø§Ø²ÛŒ!' || actionButton.textContent === 'Ø¨Ø§Ø²ÛŒ Ø¯ÙˆØ¨Ø§Ø±Ù‡ Ø¨Ø§ Ø³ÙˆØ§Ù„Ø§Øª Ø¬Ø¯ÛŒØ¯!') {
                startGame();
            }
        });

        addInteractionListener(restartButton, () => {
            resultScreen.style.display = 'none';
            questionNumber.style.display = 'block';
            document.querySelector('.timer').style.display = 'block';
            actionButton.style.display = 'block';
            actionButton.textContent = 'Ø¨Ø§Ø²ÛŒ Ø¯ÙˆØ¨Ø§Ø±Ù‡ Ø¨Ø§ Ø³ÙˆØ§Ù„Ø§Øª Ø¬Ø¯ÛŒØ¯!';
            startGame();
        });

